#get title of webpage
def get_titles_from_listing(url):
    chrome_options = webdriver.ChromeOptions()
    chrome_options.add_argument("--headless")
    chrome_options.add_argument('--disable-gpu')
    chrome_options.add_argument('--no-sandbox')
    chrome_options.add_argument('--window-size=1920x1080')
    chrome_options.add_argument('--ignore-certificate-errors')
    chrome_options.add_argument('--disable-dev-shm-usage')
    chrome_options.add_argument('--silent')

    service = Service('/usr/bin/chromedriver')
    driver = webdriver.Chrome(service=service, options=chrome_options)

    try:
        driver.get(url)

        # Wait for the listing of news articles to load
        WebDriverWait(driver, 10).until(
            EC.presence_of_element_located((By.CSS_SELECTOR, ".news-card__title"))  # Adjust selector based on actual structure
        )

        # Locate all news title elements
        titles = driver.find_elements(By.CSS_SELECTOR, ".news-card__title")  # Adjust based on page structure

        # Extract the text of each title
        titles_text = [title.text for title in titles]

        return titles_text

    except Exception as e:
        print(f"An error occurred: {e}")

    finally:
        driver.quit()

